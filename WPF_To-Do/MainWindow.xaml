<Window x:Class="WPF_To_Do.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_To_Do"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Padding="20" Grid.Row="0" Background="#EEE">
            <StackPanel Orientation="Vertical">
                <Label FontSize="22" FontWeight="Bold">Daily Tasks:</Label>
                <ItemsControl ItemsSource="{Binding AllTodos}" Padding="0,20,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox IsChecked="{Binding IsDone}" VerticalAlignment="Center" Margin="0,0,10,0"></CheckBox>
                                <TextBlock Text="{Binding Title}" FontSize="20" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1">
            <TextBox Name="TodoTextbox" Width="150" Margin="10"/>
            <Button Content="Add Todo" Click="AddTodoButton_Clicked" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
